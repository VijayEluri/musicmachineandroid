<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    
    >
<TextView
    android:id="@+id/vote_artist"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="artist"
    />
    
 <TextView
    android:id="@+id/vote_title"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="title"
    />
    
     <TextView
    android:id="@+id/vote_length"
    android:layout_width="fill_parent" 
    android:layout_height="wrap_content" 
    android:text="1:54"
    />

     
    <ImageView android:layout_height="wrap_content" android:background="@drawable/record" android:layout_width="wrap_content" android:id="@+id/vote_record" android:baselineAlignBottom="false"></ImageView><Button android:id="@+id/Button01" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="Preview Song" android:textColor="#ffffff" android:textSize="20px" android:textStyle="bold" android:layout_alignParentBottom="false" android:background="@drawable/button_dark"></Button>
    
    <Button
        android:id="@+id/do_vote_button"
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content" 
        android:text="Do Vote" android:textColor="#ffffff" android:textSize="28px" android:textStyle="bold" android:shadowColor="#111111" android:shadowRadius="3" android:shadowDy="3" android:shadowDx="3" android:layout_alignParentBottom="true" android:background="@drawable/button_green"/>



</RelativeLayout>
